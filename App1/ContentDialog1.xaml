<ContentDialog
    x:Class="App1.ContentDialog1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="89,2,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="181"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="0,7,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Height="20" Width="70" SelectionChanged="textBlock_SelectionChanged"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="0,44,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Height="20" Width="70" SelectionChanged="textBlock_SelectionChanged"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="89,39,0,0" VerticalAlignment="Top" Width="181"/>
        <Button x:Name="button" Content="Submit" HorizontalAlignment="Left" Margin="105,86,0,0" VerticalAlignment="Top" Click="button_Click"/>
    </Grid>
</ContentDialog>
